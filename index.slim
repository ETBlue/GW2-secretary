        .container.table-responsive
          table#datatable.table.table-striped width='100%'
            thead
              tr
                th Icon
                th Name
                th Amount
                th Type
                th Level
                th Rarity
                th Description
                th Position
            tfoot
              tr
                th Icon
                th Name
                th Amount
                th Type
                th Level
                th Rarity
                th Description
                th Position
            tbody
              tr
                td.text-center colspan='8'
                  .timer-loader.loading
